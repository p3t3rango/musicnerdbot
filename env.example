# Discord Bot Configuration
# Get these from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Discord OAuth2 URL
# Use this URL to invite the bot to your server
DISCORD_OAUTH2_URL=https://discord.com/oauth2/authorize?client_id=1383942386148966413&permissions=277025508352&integration_type=0&scope=applications.commands+bot

# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback

# OpenAI Configuration
# Get this from https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key

# Supabase Configuration
# Get these from https://supabase.com
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Brave API Configuration
BRAVE_API_KEY=your_brave_api_key

# Server Configuration
PORT=3000

